@model ThreeAmigos.Models.CategoryViewModel

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Prices)
        </th>
    </tr>

    @foreach (var item in Model.Products)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prices.Where(x => x.Quantity == 1))
            </td>
        </tr>
    }
</table>